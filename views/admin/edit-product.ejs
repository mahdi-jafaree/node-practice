<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <form class="product-form" action="/admin/<%=editing?"edit-product":"add-product"%>" method="POST">
                    <% if(editing) {%> 
                        <input name="productId" type="hidden" value="<%=product.id%>" />
                    <%} %>
                    <div class="form-control">
                        <label for="title">Title</label>
                        <input type="text" name="title" value="<%=editing?product.title:"" %> " id="title">
                    </div>
                    <div class="form-control">
                        <label for="imageUrl">Image URL</label>
                        <input type="text" name="imageUrl" value="<%=editing?product.imageUrl:"" %>" id="imageUrl">
                    </div>
                    <div class="form-control">
                        <label for="price">Price</label>
                        <input type="number" name="price" value="<%=editing?product.price:"" %>" id="price" step="0.01">
                    </div>
                    <div class="form-control">
                        <label for="description">Description</label>
                        <textarea name="description" value="<%=editing?product.description:"" %>" id="description"
                            rows="5"></textarea>
                    </div>

                    <button class="btn" type="submit">
                        <%= editing ? "Update Product" : "Add Product" %>
                    </button>
                </form>
            </main>
            <%- include('../includes/end.ejs') %>